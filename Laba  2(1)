//Вычислить количество слов в строке (строка разделяются пробелами и запятыми)
#include <stdio.h>
#define N 255
char str[N]; //объявление массива(символов) как глобальной переменной
    int i,count,flag;
int mass()
{
	gets(str);
	return 0;
}
int screen()
{
	printf("%s\n", "Your_string_is: ");
	for (i = 0; str[i] != '\0'; i++)
	{
		printf("%c", str[i]);  
	}
	return 0;
}
 
int main() {
 
   mass();
   screen();
    count = 0;
    flag = 0;
	for (i=0; str[i]!='\0'; i++) //
        if (str[i] != ' ' && flag == 0) {
            count += 1;
            flag = 1;
        } else 
            if (str[i] == ' ') flag = 0;
    printf("\nIn this string %d words.\n", count);
	return 0;
}
